<p id="notice"><%= notice %></p>

<h1>Crudposts</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @crudposts.each do |crudpost| %>
      <tr>
        <td><%= crudpost.description %></td>
        <td><%= crudpost.title %></td>
        <td><%= link_to 'Show', crudpost %></td>
        <td><%= link_to 'Edit', edit_crudpost_path(crudpost) %></td>
        <td><%= link_to 'Destroy', crudpost, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Crudpost', new_crudpost_path %>
